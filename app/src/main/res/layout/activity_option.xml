<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionActivity"
    android:background="@drawable/new_login_gradients"
    >


    <Button
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="126dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/demo"
        android:layout_toRightOf="@+id/demo"
        android:background="@drawable/circle"
        android:drawableTop="@drawable/ic_logout_icon"
        android:gravity="center_vertical|center_horizontal"
        android:text="Login"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/demo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="login"
        />


    <Button
        android:id="@+id/demo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="165dp"
        android:background="@drawable/circle"
        android:drawableTop="@drawable/ic_results_icon"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="demoStart"
        android:text="Demo"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login" />

</android.support.constraint.ConstraintLayout>